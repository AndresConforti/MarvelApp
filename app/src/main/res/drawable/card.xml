<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="@integer/cardview_gradient_angle"
        android:endColor="@color/black"
        android:startColor="@color/dark_red_text" />
    <stroke
        android:width="@dimen/cardview_stroke_size"
        android:color="@color/cardview_stroke_color" />
    <corners
        android:bottomLeftRadius="@dimen/zero_dp"
        android:radius="@dimen/cardview_corner_radius"
        android:topLeftRadius="@dimen/zero_dp" />
    <padding
        android:top="@dimen/cardview_horizontal_padding"
        android:bottom="@dimen/cardview_horizontal_padding"
        android:right="@dimen/cardview_vertical_padding"
        android:left="@dimen/cardview_vertical_padding" />
</shape>
